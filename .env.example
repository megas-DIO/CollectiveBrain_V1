# CollectiveBrain Multi-Agent System - Environment Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# GENERAL SETTINGS
# ============================================================================
CB_ENVIRONMENT=development
CB_DEBUG=false
CB_LOG_LEVEL=INFO

# ============================================================================
# MEMORY LAYER CONFIGURATION
# ============================================================================

# Working Memory
CB_MEMORY_WORKING_MEMORY_BUDGET=50

# Redis (Session Memory)
CB_MEMORY_REDIS_HOST=localhost
CB_MEMORY_REDIS_PORT=6379
CB_MEMORY_REDIS_DB=0
CB_MEMORY_REDIS_PASSWORD=

# Milvus (Semantic Memory - Vector Database)
CB_MEMORY_MILVUS_HOST=localhost
CB_MEMORY_MILVUS_PORT=19530
CB_MEMORY_MILVUS_COLLECTION=collective_brain_vectors
CB_MEMORY_MILVUS_DIMENSION=1536

# Neo4j (Relational Memory - Knowledge Graph)
CB_MEMORY_NEO4J_URI=bolt://localhost:7687
CB_MEMORY_NEO4J_USER=neo4j
CB_MEMORY_NEO4J_PASSWORD=password

# ============================================================================
# CONSENSUS ENGINE CONFIGURATION
# ============================================================================
CB_CONSENSUS_MAX_FAULTY_AGENTS=1
CB_CONSENSUS_TIMEOUT_SECONDS=300
CB_CONSENSUS_AUTO_VOTE_ENABLED=false

# ============================================================================
# WORKER POOL CONFIGURATION
# ============================================================================
CB_WORKER_WORKERS_PER_ROLE=1
CB_WORKER_TASK_TIMEOUT_SECONDS=600

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
CB_API_HOST=0.0.0.0
CB_API_PORT=8000
CB_API_RELOAD=false
CB_API_WORKERS=1
CB_API_LOG_LEVEL=info

# ============================================================================
# AI MODEL CONFIGURATION (GitHub Models Integration)
# ============================================================================
CB_MODEL_PROVIDER=github
CB_MODEL_NAME=gpt-4
CB_MODEL_API_KEY=
CB_MODEL_API_BASE=

# ============================================================================
# QUALITY VALIDATION CONFIGURATION
# ============================================================================
CB_QUALITY_MIN_WORKERS=3
CB_QUALITY_REQUIRE_CONSENSUS=true

# ============================================================================
# DOCKER COMPOSE CONFIGURATION
# ============================================================================
NEO4J_PASSWORD=your_secure_password_here
